@model Reservation
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reservation</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        <form class="form-horizontal" method="post" action="/home/reservation">
            <div class="form-group">
                <label class="col-sm-2 control-label">Room Number</label>
                <div class="col-sm-10">
                    <input type="text" value="@ViewBag.roomnumber" name="roomnumber" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.Adults, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(a => a.Adults, new { htmlAttributes = new { @class = "form-control", placeholder = "Adults", required = "required" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.Children, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(a => a.Children, new { htmlAttributes = new { @class = "form-control", placeholder = "Children", required = "required" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.ReservationDate, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.ReservationDate, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.CheckInDate, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.CheckInDate, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.CheckOutDate, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.CheckOutDate, new { htmlAttributes = new { @class = "form-control", required = "required"  } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.Total, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(a => a.Total, new { htmlAttributes = new { @class = "form-control", placeholder = "Total", required = "required" , type = "number" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Go To Guest Reservation</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
